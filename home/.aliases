#!/usr/bin/env bash

# NAVIGATION
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# COMMON DIRECTORIES
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias dc="cd ~/Documents"
alias p="cd ~/Documents/projects"
alias home="cd ~"

# Aliases
alias ls='ls -G' # colored output
alias ll='ls -l' # long listing
alias la='ls -la' # all files
alias py=python3
alias python=python3
alias pip='noglob pip'

# GIT
alias g="git"
alias gs="git status"
alias gd="git diff"
alias gb="git branch"
alias gm="git checkout master"

# Nvim
alias vim="nvim"


# if bat is available
if command -v bat &> /dev/null; then
  alias cat="bat"
fi
